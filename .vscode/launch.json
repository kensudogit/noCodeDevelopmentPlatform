{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Frontend: Vite",
      "command": "npm run dev",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "name": "Backend: FastAPI",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/main.py",
      "env": {
        "ENV": "development"
      },
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend"
    }
  ]
}